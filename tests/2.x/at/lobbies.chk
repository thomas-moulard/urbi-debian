// Check that the lobby used by ats are the lobby which have declared them.

var Global.toMain = Event.new|;
var Global.toL1 = Event.new|;


// Check with echo.

at(toMain?(var msg)) echo(msg);
l1.receive("at(toL1?(var msg)) echo(msg);");

toMain!(0);
[00000001] *** main: 0

l1.receive("toMain!(1);");
[00000002] *** main: 1

toL1!(0);
[00000003] *** l1: 0

l1.receive("toL1!(1);");
[00000004] *** l1: 1

