#! /bin/sh

# Generate the file doxygen.h and Doxyfile to tweak Doxygen in
# directory $1.

case $1 in
  ('') echo >&2 "$0: missing argument: output directory"
     exit 1
     ;;
  (*) dir=$1;;
esac

# Generate the contents of doxygen.h.
doxygen_h ()
{
  echo '/**
 * \mainpage'
  for f in README AUTHORS NEWS INSTALL TODO THANKS LINKS ChangeLog LICENSE
  do
    if test -f "@top_srcdir@/$f"; then
      echo " * \section $f"
      sed -e '1s/^/<tt>/;
              s/^[	 ]*\*/\\li/;
              s/^/ * /;
              s/\\\([^a-zA-Z]\)/\\\\\1/g;
              s/\\mainpage/\\\\mainpage/g;
              s/\\file/\\\\file/g;
              s/@mainpage/\\@mainpage/g;
              s/@file/\\@file/g;
              /^ \* $/! s/$/<br>/;
              /^ \* $/  s/$/\
 */;
              $s@$@</tt>@'                  \
            "@top_srcdir@/$f"
    fi
  done
  echo '*/'
}

